
@{
    Layout = null;
}
@model (string a, string b) ;
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet"
          href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <title>Video Meeting nam</title>
    <link href="~/css/room.css" rel="stylesheet" />

    <script>
        var ROOM_ID = "@Model.a";
    </script>
</head>
<body>
    <div class="main">
        <div class="main__left" id="main__left">
            <div class="main__videos">
                <div id="video-grid"></div>
                <!-- <div id="video-share">
                  <div id="sharescreen">
                    <video id="my-video"></video>
                  </div>
                </div> -->
            </div>

            <div class="main__controls">
                <div class="main__controls_block">
                    <button class="main__controls_button"
                            id="muteButton"
                            onclick="muteUnmute()">
                        <i class="fa fa-microphone"></i>
                    </button>

                    <button class="main__controls_button"
                            id="playPauseVideo"
                            onclick="playStop()">
                        <i class="fa fa-video-camera"></i>
                    </button>

                    <button class="main__controls_button"
                            id="share-screen"
                            onclick="connect_share()"
                            hidden>
                        <span>Share Screen</span>
                    </button>

                    <button class="main__controls_button"
                            id="join"
                            style="background: chartreuse">
                        <span>JOIN</span>
                    </button>

                    <button class="main__controls_button"
                            id="live"
                            onclick="live()"
                            style="background: rgb(182, 5, 34)"
                            hidden>
                        Record screen
                    </button>

                    <button class="main__controls_button"
                            id="Record"
                            onclick="recoding()"
                            style="background: rgb(211, 10, 43)"
                            hidden>
                        Record
                    </button>

                    <button class="main__controls_button"
                            id="stopRecording"
                            onclick="stopRecording()"
                            hidden>
                        stop Record
                    </button>

                    <button class="main__controls_button"
                            id="download"
                            onclick="download()"
                            hidden>
                        <span id="join">
                            <span>download</span>
                        </span>
                    </button>

                    <button class="main__controls_button"
                            id="chat"
                            onclick="show__chat()"
                            hidden>
                        chat
                        <b id="chat_i"
                           style="
                  background-color: firebrick;
                  color: firebrick;
                  border-radius: 10px;
                "
                           hidden>o</b>
                    </button>
                    <button class="main__controls_button"
                            id="User"
                            onclick="show__user()"
                            hidden>
                        Users
                    </button>

                </div>
            </div>
        </div>

        <input type="checkbox" id="show_chat" hidden />
        <div class="main__right" id="main__right">
            <div class="main__header">
                <h6>Chat <i class="fa fa-comment"></i></h6>
            </div>
            <div class="main__chat__window" id="main__chat__window">
                <ul class="messages" id="all_messages"></ul>
            </div>
            <div class="main__message_container">
                <input type="text"
                       id="chat_message"
                       placeholder="Type message here.." />
            </div>
        </div>

        <div class="main__right_User" id="main__right_User">
            <div>
                <ul class="user_join" id="user_join">
                    <li><div>You</div></li>
                </ul>
            </div>
        </div>
    </div>
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="~/js/webrtc.js"></script>
    <script src="~/js/Style.js"></script>
</body>
</html>

